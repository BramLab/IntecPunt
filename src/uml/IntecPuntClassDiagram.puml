@startuml

class Book {
  - title: String
  - author: String
  - publicationYear: int
  - ISBN: String
  - availableCopies: int
  + editDetails()
  + isAvailable(): boolean
}

class Member {
  - name: String
  - age: int
  - memberId: String
  - email: String
  + borrowBook(b: Book)
  + returnBook(b: Book)
}

class Loan {
  - loanDate: Date
  - dueDate: Date
  - returnDate: Date
  + markReturned()
  + isOverdue(): boolean
}

class Librarian {
  - employeeId: String
  + addBook(b: Book)
  + removeBook(b: Book)
  + editMember(m: Member)
}

class LibrarySystem {
  - books: List<Book>
  - members: List<Member>
  - loans: List<Loan>
  + searchBooks(query: String)
  + addMember(m: Member)
  + trackLoan(l: Loan)
  }

LibrarySystem --> Book : manages >
LibrarySystem --> Member : manages >
LibrarySystem --> Loan : tracks >
Loan --> Book : relates to >
Loan --> Member : borrowed by >
Librarian --> LibrarySystem : uses >
Member --> Loan : creates >
@enduml